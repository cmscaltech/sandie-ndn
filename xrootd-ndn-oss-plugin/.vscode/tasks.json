{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // defaults
        {
            "label": "gdbserver-stop",
            "type": "shell",
            "command": "ssh root@192.168.56.101 killall gdbserver"
        },
        // starting remote gdbserver instances
        {
            "label": "gdbserver-xrdndn-consumer",
            "dependsOn": "build-remote-xrdndn-consumer",
            "type": "shell",
            "args": [
                "root@192.168.56.101",
                "/root/sandie-ndn/xrootd-ndn-oss-plugin"
            ],
            "command": "${workspaceRoot}/.vscode/build-remote-xrdndn-consumer.sh",
            "isBackground": true
        },
        {
            "label": "gdbserver-xrdndn-producer",
            "type": "shell",
            "args": [
                "root@192.168.56.101",
                "/root/sandie-ndn/xrootd-ndn-oss-plugin"
            ],
            "command": "${workspaceRoot}/.vscode/build-remote-xrdndn-producer.sh",
            "isBackground": true
        }
    ]
}